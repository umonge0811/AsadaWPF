<Page x:Class="wpfASADACore.Views.frmClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:wpfASADACore.Views"
       xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Background="WhiteSmoke"
      d:DesignHeight="650" d:DesignWidth="800"
      Title="frmClient" Loaded="Page_Loaded">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="40"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!--#region  Titulo del Formulario-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <iconPacks:PackIconModern Kind="User" RenderTransformOrigin="0.5,0.5" Width="50" Margin="0,8,0,0" Height="30" Foreground="Orange" Grid.Column="1" HorizontalAlignment="Center" />

            <TextBlock Text="Control de Clientes" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"></TextBlock>
        </Grid>
        <!--#endregion-->


        <Grid Grid.Row="2">

            <ui:Card VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="100"/>
                        <!--<ColumnDefinition Width="100"/>-->
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="Search12"  Grid.Column="0"/>

                    <ui:TextBox x:Name="txtBuscarUsuario" Grid.Column="1" Margin="0,10"   VerticalAlignment="Center" Cursor="IBeam" FontSize="14" PlaceholderEnabled="True"  PlaceholderText="Digita el No. Abonado"/>

                    <ui:Button  x:Name="btnBuscarUsuario" Appearance="Primary" Grid.Column="2" Content="Buscar" Icon="Fluent24" HorizontalAlignment="Center"/>


                    <!--<ui:Button  x:Name="btnLimpiarUsuario" Grid.Column="3" Content="Limpiar" Icon="Fluent24" HorizontalAlignment="Center"/>-->
                </Grid>
            </ui:Card>
        </Grid>

        <!--#region  Titulo del Formulario-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <iconPacks:PackIconModern Kind="UserAdd"  RenderTransformOrigin="0.5,0.5" Width="50" Height="30" Foreground="Green" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Clientes Nuevos" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12,0,0" Grid.RowSpan="2" Grid.Column="2"></TextBlock>
        </Grid>
        <!--#endregion-->

        <Grid Grid.Row="4">

            <Grid >
                <ui:Card  VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <ui:TextBox x:Name="txt_NewNameCli" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                    PlaceholderEnabled="True" PlaceholderText="Nombre del Cliente"
                                    Margin="0,5,0,10" Grid.Column="1"/>

                        <ui:TextBox x:Name="txt_NewFirstNameCli" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                    PlaceholderEnabled="True" PlaceholderText="Primer Apellido"
                                    Margin="0,5,0,10" Grid.Column="3"/>

                        <ui:TextBox x:Name="txt_NewsecondSurnameCli" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                     PlaceholderEnabled="True" PlaceholderText="Segundo Apellido"
                                     Margin="0,5,0,10" Grid.Column="5"/>

                        <ui:TextBox x:Name="txt_NewDNICli" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                    PlaceholderEnabled="True" PlaceholderText="Identificación del Cliente"
                                    Margin="0,4,0,10" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

                        <ui:TextBox x:Name="txt_NewSubscribe" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                    PlaceholderEnabled="True" PlaceholderText="No. Abonado" 
                                    Grid.Column="3" Margin="0,5,0,10" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                        <ComboBox x:Name="cmb_TypeClient" Width="200" Height="35" Margin="0,5,0,0"
                                    Grid.Column="5" VerticalAlignment="Top" Grid.Row="1"  >
                            <ComboBoxItem IsSelected="True">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Account" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Select Client Type" FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                            </ComboBoxItem>
                            
                        </ComboBox>
                    </Grid>
                </ui:Card>
            </Grid>

        </Grid>


        <Grid Grid.Row="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <ui:Button x:Name="btn_CreateNewClient" Height="34" Appearance="Primary" Margin="5,0,0,0" Click="btn_CreateNewClient_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="uSER" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Crear" VerticalAlignment="Center"/>
                    </StackPanel>
                </ui:Button>

                <ui:Button x:Name="btn_ModifyUser"  Height="34" Appearance="Caution" Margin="10,0,0,0" >
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="EditAdd" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Editar" VerticalAlignment="Center"/>
                    </StackPanel>

                </ui:Button>

                <ui:Button x:Name="btn_DeleteUser"  Height="34" Appearance="Danger" Margin="10,0,0,0" >
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="UserDelete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Eliminar" VerticalAlignment="Center"/>
                    </StackPanel>
                </ui:Button>

                <ui:Button x:Name="btn_CleanTxt"  Height="34" Appearance="Info" Margin="10,0,0,0" >
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconModern Kind="Clean" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Limpiar" VerticalAlignment="Center"/>
                    </StackPanel>
                </ui:Button>

            </StackPanel>
        </Grid>


        <StackPanel Grid.Row="6">
            <DataGrid x:Name="dtgClientes"  CanUserAddRows="False" SelectionUnit="FullRow" SelectionMode="Extended" Padding="10" FontSize="14" AutoGenerateColumns="False" IsReadOnly="True" RowBackground="Red" AlternatingRowBackground="White" GridLinesVisibility="None" HorizontalAlignment="Center">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="DarkSlateGray"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=id}" Header="ID" Width="Auto" MinWidth="50"/>
                    <DataGridTextColumn Binding="{Binding Path=DNI}" Header="Cédula" Width="Auto" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding Path=name}" Header="Nombre" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=lastName}" Header="Apellido Paterno" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=secondSurname}" Header="Apellido Materno" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=SubscriberNum}" Header="# Suscritor" Width="Auto" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding Path=TypeClientId}" Header="Tipo cliente" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>



   
    </Grid>
   
</Page>
