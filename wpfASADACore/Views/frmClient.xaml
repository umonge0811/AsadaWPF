<Page x:Class="wpfASADACore.Views.frmClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:wpfASADACore.Views"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Background="WhiteSmoke"
      d:DesignHeight="1000" d:DesignWidth="1165.6"
      Title="frmClient" Loaded="Page_Loaded" >



    <Grid>



        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--#region  Titulo del Formulario-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <iconPacks:PackIconModern Kind="User" RenderTransformOrigin="0.5,0.5" Width="50" Margin="0,8,0,0" Height="30" Foreground="Orange" Grid.Column="1" HorizontalAlignment="Center" />

            <TextBlock Text="Control de Clientes" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"></TextBlock>
        </Grid>
        <!--#endregion-->


        <Grid Grid.Row="2">

            <ui:Card VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="300"/>
                        <!--<ColumnDefinition Width="100"/>-->
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="Search12"  Grid.Column="0"/>

                    <ui:TextBox x:Name="txtBuscarCli" TextChanged="txtBuscarCli_TextChanged" Grid.Column="1" Margin="0,10"   VerticalAlignment="Center" Cursor="IBeam" FontSize="14" PlaceholderEnabled="True"  PlaceholderText="Digita datos de busqueda"/>



                    <!--<ui:Button  x:Name="btnLimpiarUsuario" Grid.Column="3" Content="Limpiar" Icon="Fluent24" HorizontalAlignment="Center"/>-->
                </Grid>
            </ui:Card>
        </Grid>

        <!--#region  Titulo del Formulario-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <iconPacks:PackIconModern Kind="UserAdd"  RenderTransformOrigin="0.5,0.5" Width="50" Height="30" Foreground="Green" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Clientes Nuevos" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Grid.RowSpan="2" Grid.Column="2"></TextBlock>

        </Grid>
        <!--#endregion-->

        <Grid Grid.Row="4">


            <Grid >
                <ui:Card  VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Grid HorizontalAlignment="Center" Height="424">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="90"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>


                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txt_NewNameCli" TextChanged="txt_NewNameCli_TextChanged" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                  VerticalAlignment="Center" materialDesign:HintAssist.Hint="Nombre del Cliente" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,10" Grid.Column="1" Grid.Row="1" />

                        <TextBox x:Name="txt_NewFirstNameCli" TextChanged="txt_NewFirstNameCli_TextChanged" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                  VerticalAlignment="Center" materialDesign:HintAssist.Hint="Primer Apellido" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,10" Grid.Column="1" Grid.Row="2"/>

                        <TextBox x:Name="txt_NewsecondSurnameCli" TextChanged="txt_NewsecondSurnameCli_TextChanged" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                  VerticalAlignment="Center" materialDesign:HintAssist.Hint="Segundo Apellido" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,5,0,10" Grid.Column="1" Grid.Row="3"/>

                        <TextBox x:Name="txt_NewDNICli" TextChanged="txt_NewDNICli_TextChanged" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                  VerticalAlignment="Center" materialDesign:HintAssist.Hint="Identificación del Cliente" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,4,0,10" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch" />

                        <TextBox x:Name="txt_NewSubscribe" TextChanged="txt_NewSubscribe_TextChanged" TextWrapping="Wrap" Height="35" Width="200" FontSize="11"
                                  VerticalAlignment="Center" materialDesign:HintAssist.Hint="No. Abonado" 
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Grid.Column="1" Margin="0,5,0,10" Grid.Row="5" HorizontalAlignment="Stretch" />


                        <Label Content="Asignar Cedúla" Grid.Column="3" Margin="10,11,85,11" Grid.Row="5" RenderTransformOrigin="-0.006,0.571"/>
                        <ui:ToggleSwitch x:Name="copySwitch" OffContent="Off" OnContent="On" Grid.Column="3" Margin="130,12,0,0" Width="70" Grid.Row="5" VerticalAlignment="Top" Checked="copySwitch_Checked" Unchecked="copySwitch_Unchecked" />


                        <ComboBox x:Name="cmb_TypeClient" SelectionChanged="cmb_TypeClient_SelectionChanged" Width="200" Height="45" Margin="0,5,0,0"
                                  Grid.Column="1" VerticalAlignment="Top" Grid.Row="6" 
                                  MinWidth="128"
                                  materialDesign:ColorZoneAssist.Mode="SecondaryLight"
                                  materialDesign:HintAssist.HelperText="Selecciona Tipo de Cliente"
                                  materialDesign:HintAssist.Hint="Tipo Cliente"
                                  materialDesign:TextFieldAssist.HasClearButton="True"
                                  materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource SecondaryHueMidBrush}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem IsSelected="True">
                                <StackPanel Orientation="Horizontal">
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>


                        <Grid Grid.Row="7">
                            <ui:Card Margin="0,31,-417,0" VerticalAlignment="Top" Background="LightGray">

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="7">

                                    <ui:Button x:Name="btn_CreateNewClient" Height="34" Appearance="Primary" Margin="5,0,0,0" Click="btn_CreateNewClient_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconModern Kind="uSER" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Crear" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ui:Button>

                                    <ui:Button x:Name="btn_ModifyClient" Click="btn_ModifyClient_Click" Height="34" Appearance="Caution" Margin="10,0,0,0" >
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconModern Kind="EditAdd" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Editar" VerticalAlignment="Center"/>
                                        </StackPanel>

                                    </ui:Button>

                                    <ui:Button x:Name="btn_DeleteClient" Click="btn_DeleteClient_Click" Height="34" Appearance="Danger" Margin="10,0,0,0" >
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconModern Kind="UserDelete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Eliminar" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ui:Button>

                                    <ui:Button x:Name="btn_CleanTxt" Click="btn_CleanTxt_Click"  Height="34" Appearance="Info" Margin="10,0,0,0" >
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconModern Kind="Clean" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="Limpiar" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </ui:Button>




                                </StackPanel>

                            </ui:Card>


                        </Grid>
                        <ProgressBar x:Name="ProgressBarClient"  IsIndeterminate="False" Visibility="Hidden" VerticalAlignment="Center" Foreground="ForestGreen" Background="GreenYellow" Margin="-7,0,0,0" Height="13" RenderTransformOrigin="00,0.5" Grid.ColumnSpan="5" Grid.Row="9">
                            <ProgressBar.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ProgressBar.RenderTransform>
                        </ProgressBar>





                    </Grid>


                </ui:Card>
            </Grid>
            <materialDesign:Snackbar x:Name="SnackbarMessage" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Bottom"
                         FontSize="11">
                <materialDesign:SnackbarMessage 
                    Content="Ingrese el número de abonado o active el Switch para asignar la cédula como número de abonado" />
            </materialDesign:Snackbar>



        </Grid>


        <Grid Grid.Row="5">
        </Grid>


        <StackPanel Grid.Row="6" Margin="0,5,0,0">
            <DataGrid x:Name="dtgClientes" MouseDoubleClick="dtgClientes_MouseDoubleClick"  CanUserAddRows="False" SelectionUnit="FullRow" SelectionMode="Extended" Padding="10" FontSize="14" AutoGenerateColumns="False" IsReadOnly="True" RowBackground="LightGray" AlternatingRowBackground="White" GridLinesVisibility="None" HorizontalAlignment="Center">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="DarkSlateGray"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=DNI}" Header="Cédula" Width="Auto" MinWidth="100" />
                    <DataGridTextColumn Binding="{Binding Path=name}" Header="Nombre" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=lastName}" Header="Apellido Paterno" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=secondSurname}" Header="Apellido Materno" Width="Auto"/>
                    <DataGridTextColumn Binding="{Binding Path=SubscriberNum}" Header="# Suscritor" Width="Auto" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding Path=TypeClient.name}" Header="Tipo cliente" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>

    </Grid>

</Page>
